{
    "manifest_version": 3,
    "name": "VBTV Hotkeys",
    "version": "1.0",
    "description": "Adds hotkeys to VBTV",
    "permissions": [],
    "host_permissions": ["https://tv.volleyballworld.com/*", "https://app.balltime.com/*"],
    "content_scripts": [
      {
        "matches": ["https://tv.volleyballworld.com/*", "https://app.balltime.com/*"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["keymap_overlay.json"],
        "matches": ["https://tv.volleyballworld.com/*", "https://app.balltime.com/*"]
      }
    ]
  }
  
